generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo         String  
  descricao      String?  
  status         StatusTarefa   @default(PENDENTE) 
  dataVencimento DateTime?
}
enum StatusTarefa {
  PENDENTE
  REALIZANDO
  CONCLUIDA
}